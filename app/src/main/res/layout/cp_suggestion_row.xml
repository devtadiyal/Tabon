<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/_8sdp">

    <com.github.ivbaranov.mli.MaterialLetterIcon
        android:id="@+id/letterIcon"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:layout_marginRight="@dimen/_16sdp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        app:mli_letter_color="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/letterIcon"
        android:layout_toLeftOf="@id/cp_ivSelectedComm"
        android:layout_toRightOf="@id/letterIcon"
        android:layout_toStartOf="@id/cp_ivSelectedComm"
        android:orientation="vertical">

        <!--DisplayName-->
        <TextView
            android:id="@+id/tvDisplayName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:text="Name Last name"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="@dimen/_14sdp" />

        <!--Communication-->
        <TextView
            android:id="@+id/tvCommunication"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:text="xxxxxxxx" />

    </LinearLayout>

</RelativeLayout>