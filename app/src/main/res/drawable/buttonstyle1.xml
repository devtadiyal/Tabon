<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <stroke
        android:width="@dimen/_1sdp"
        android:color="#1b1b1b" />

    <corners android:radius="@dimen/_3sdp" />

    <gradient
        android:angle="45"
        android:centerColor="#000"
        android:centerX="25%"
        android:endColor="#000"
        android:startColor="#000"
        android:type="linear" />
    <padding
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp" />
    <size
        android:width="@dimen/_250sdp"
        android:height="@dimen/_50sdp" />

</shape>



